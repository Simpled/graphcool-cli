{
  "compilerOptions": {
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "target": "es6",
    "outDir": "./dist",
    "sourceMap": true,
    "module": "CommonJS",
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "es2015",
      "es2016.array.include"
    ],
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*",
        "src/types/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "include": [
    "./src/**/*.ts",
    "./tests/**/*.ts",
    "./typings/*.d.ts"
  ]
}